{
  "manifest_version": 2,

  "name": "Getpro.co x Linkedin",
  "description": "This will help every single Getpro's guy when working with Linkedin",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Param√®tres pour la connexion avec getpro.co"
  },
  "permissions": [
    "tabs", "https://www.linkedin.com/*",
    "storage"
  ],
  "background": {
    "scripts": ["media/js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "css": ["media/css/content.css"],
      "js": ["bower_components/jquery/dist/jquery.min.js", "media/js/content.js"]
    }
  ]
}
