{
  "manifest_version": 2,

  "name": "Getpro.co x Linkedin",
  "description": "This will help every single Getpro's guy when working with Linkedin",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "tabs", "https://www.linkedin.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "css": ["media/css/content.css"],
      "js": ["media/js/jquery-3.0.0.min.js", "media/js/content.js"]
    }
  ]
}
